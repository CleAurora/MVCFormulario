@using ex2WebMVC.Models;
@{
    Layout = "MasterPage";
    ViewBag.Title = "Editar Usuário";
    UsuarioModel usuario = ViewBag.usuario;
    string dataNascimento = usuario.DataNascimento.ToString("yyyy-MM-dd");


}
<div class = "container">
    <form action="/Usuario/Editar" method = "POST">
        <h2>Edite seus dados</h2>
        <div class="form-group">
            <input type= "hidden" value = "@usuario.Id" name="id"> <!--hidden para que o usuario não mexa nessa variável e ela fique escondida -->
            
            <label for="nome">Nome:</label>
            <input type = "text" name = "nome" value="@usuario.Nome"usuar class="form-control">
            <label for = "email">Email</label>
            <input type="text" name = "email"  value = "@usuario.Email" class="form-control">
            <label for="senha"> Senha: </label>
            <input type="password" name="senha" value="@usuario.Senha" class="form-control">
            <label for = "dataNascimento">Data de Nascimento</label>
            <input type="date" name = "dataNascimento" value = "@dataNascimento" class="form-control">
            <br>
            <input type="submit" value= "Editar" class="btn btn-secondary btn-lg btn-block">
        </div>
    </form>
</div><!--fim do container -->